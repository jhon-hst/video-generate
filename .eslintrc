{
  "env": {
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "standard",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "overrides": [
    {
      "files": ["*.cy.ts", "*.cy.js"],
      "env": {
        "cypress/globals": true
      },
      "extends": [
        "plugin:cypress/recommended"
      ],
      "plugins": [
        "cypress"
      ],
     "rules": {
        "jest/no-disabled-tests": "off",   // Desactiva reglas de Jest en archivos de Cypress
        "jest/no-focused-tests": "off",
        "jest/valid-expect": "off",        // Desactiva 'valid-expect' de Jest en archivos de Cypress
        "jest/*": "off"                    // Desactiva cualquier otra regla de Jest
      }
    }
  ]
}
